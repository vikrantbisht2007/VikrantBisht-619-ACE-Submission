# List to store all books
books = []

def add_book():    #Add a new book to the collection
    title = input("Enter book title: ").strip()
    author = input("Enter author name: ").strip()
    
    if title and author:
        books.append({"title": title, "author": author})
        print(f"Book '{title}' by {author} added successfully!\n")
    else:
        print("Both title and author are required. Book not added.\n")

def search_book():  #Search for a book by title
    search_term = input("Enter book title to search: ").strip().lower()
    
    if not search_term:
        print("Please enter a title to search.\n")
        return
    
    found_books = []
    for book in books:
        if search_term in book["title"].lower():
            found_books.append(book)
    
    if found_books:
        print(f"\nFound {len(found_books)} book(s):")
        for i, book in enumerate(found_books, 1):
            print(f"{i}. '{book['title']}' by {book['author']}")
    else:
        print("No books found with that title.\n")
    
    print()  # Add an empty line for better readability

def show_all_books():
    """Display all books in the collection"""
    if not books:
        print("No books in the collection.\n")
        return
    
    print("\nAll Books in Collection:")
    print("-" * 30)
    for i, book in enumerate(books, 1):
        print(f"{i}. '{book['title']}' by {book['author']}")
    print()  # Add an empty line for better readability

def main():
    """Main program function"""
    print("Welcome to the Book Management System!")
    print("=====================================")
    
    while True:
        print("Please choose an option:")
        print("1. Add a new book")
        print("2. Search for a book by title")
        print("3. Show all books")
        print("4. Exit")
        
        choice = input("Enter your choice (1-4): ").strip()
        
        if choice == "1":
            add_book()
        elif choice == "2":
            search_book()
        elif choice == "3":
            show_all_books()
        elif choice == "4":
            print("Thank you for using the Book Management System. Goodbye!")
            break
        else:
            print("Invalid choice. Please try again.\n")

# Run the program
main()
